{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "types": [
            "vite/client"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmit": true,
        "isolatedModules": true
    },
    "include": [
        "src"
    ]
}